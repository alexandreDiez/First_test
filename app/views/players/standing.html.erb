

<div class='col-md-12'>
  <h1>NHL Stats</h1>
</div>

<div class="col-lg-8 well well-lg">
  <table class="table table-hover table-bordered">
    <thead>
    <tr>
      <td> Name </td>
      <td> Weight </td>
      <td> Age    </td>
      <td> Height </td>
      <td> Position </td>
      <td> Country  </td>
    </tr>
    </thead>
    <tbody>
    <% @players.each do |player| %>
        <tr>
          <td><%= link_to  player.name, players_show_path(:player => player.id)  %></td>
          <td><%= player.weight %></td>
          <td><%= player.age %></td>
          <td><%= player.height %></td>
          <td><%= player.position %></td>
          <td><%= player.country %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
